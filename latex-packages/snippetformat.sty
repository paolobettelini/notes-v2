\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{snippetformat}[2023/01/01 Shrink TeX snippet]

\RequirePackage[active, tightpage]{preview}
\RequirePackage[pass]{geometry}

% This package tightens the margins around the content
% of the pdf

\geometry{
    % set margins to zero
    left=0mm,
    right=0mm,
    top=0mm,
    bottom=0mm,
    % reduce paperwidth to textwidth to avoid writing where the margins were
    paperwidth=\the\textwidth
}

\pagenumbering{gobble}

\AtBeginDocument{
    \begin{preview}
}

\AtEndDocument{
    \end{preview}
}